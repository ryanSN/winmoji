{
  "name": "winmoji",
  "productName": "winMoji",
  "version": "1.1.0",
  "description": "Emoji Search for Windows",
  "main": "main.js",
  "author": "ryanSn <chatters@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "standard",
    "test": "standard && jest",
    "coverage": "yarn && jest --coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage && exit 0",
    "start": "yarn && yarn compile && electron main.js",
    "compile": "./node_modules/.bin/webpack",
    "dev": "yarn && yarn compile && electron main.js",
    "pack": "yarn compile && build --dir",
    "make:install": "rm -rf dist && yarn compile && build --win --x64",
    "release": "yarn make:install"
  },
  "dependencies": {
    "electron-config": "^1.0.0",
    "electron-localshortcut": "^2.0.0",
    "emojilib": "^2.2.0",
    "fast-levenshtein": "^2.0.6",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-jest": "^20.0.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "coveralls": "^2.13.0",
    "electron": "^1.6.2",
    "electron-builder": "^18.0.1",
    "electron-builder-squirrel-windows": "^17.0.1",
    "jest": "^20.0.3",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^15.4.2",
    "standard": "^10.0.0",
    "webpack": "^2.3.2",
    "webpack-dev-server": "^2.4.2"
  },
  "pre-commit": [
    "lint"
  ],
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "unmockedModulePathPatterns": [
      "react"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "build": {
    "appId": "com.rchatters.winmoji",
    "copyright": "Copyright (c) 2017 rchatters",
    "productName": "winMoji",
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/icon.ico"
    },
    "nsis": {
      "oneClick": false
    },
    "directories": {
      "buildResources": "build"
    }
  },
  "engines": {
    "node": ">= 7.4.0"
  }
}
