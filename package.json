{
  "name": "winmoji",
  "productName": "winMoji",
  "version": "2.3.0",
  "description": "Emoji Search for Windows",
  "main": "app/main.js",
  "author": {
    "name": "ryanSn <winmoji@rchatter.com>",
    "email": "winmoji@rchatter.com",
    "url": "https://www.winmoji.com/"
  },
  "license": "MIT",
  "scripts": {
    "prettier": "prettier --write .",
    "prettier-ci": "prettier --check .",
    "test": "cross-env NODE_ENV=test jest",
    "coverage": "yarn && jest --coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage && exit 0",
    "start": "yarn && yarn compile && electron ./app/main.js",
    "compile": "webpack --mode=production",
    "dev": "cross-env ELECTRON_IS_DEV=true yarn && yarn compile && electron ./app/main.js",
    "build:win": "electron-builder --win",
    "build:win:ci": "electron-builder --win -p never",
    "release": "rm -rf dist && yarn compile && electron-builder build --win --publish always"
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "electron-localshortcut": "^3.0.4",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.9",
    "fast-levenshtein": "^2.0.6",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "universal-analytics": "^0.4.23",
    "uuid": "^8.3.2",
    "v8-compile-cache": "^2.3.0",
    "winmojilib": "^0.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.0.0-beta",
    "coveralls": "^3.0.5",
    "cross-env": "^7.0.3",
    "electron": "^13.1.9",
    "electron-builder": "^22.1.0",
    "jest": "^26.4.2",
    "pre-commit": "^1.2.2",
    "prettier": "2.1.1",
    "react-test-renderer": "^16.6.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.1.11"
  },
  "pre-commit": [
    "prettier-ci"
  ],
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ],
    "ignore": [
      "__mocks__/**"
    ]
  },
  "jest": {
    "testURL": "http://localhost/",
    "collectCoverage": true,
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "unmockedModulePathPatterns": [
      "react"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "build": {
    "appId": "com.rchatters.winmoji",
    "copyright": "Copyright Â© 2017-2020 ryanSN",
    "productName": "winMoji",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icons/win/icon.ico"
    },
    "portable": {
      "artifactName": "winMoji-v${version}-portable.${ext}"
    },
    "nsis": {
      "artifactName": "winMoji-v${version}-setup.${ext}"
    },
    "directories": {
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ryanSN",
        "repo": "winMoji"
      }
    ]
  },
  "engineStrict": true,
  "engines": {
    "node": "15.3"
  }
}
